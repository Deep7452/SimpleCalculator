<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:layout_marginBottom="12dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#C4333736"
        android:id="@+id/button_layout">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="horizontal">

       <com.google.android.material.button.MaterialButton
           android:layout_width="68dp"
           android:layout_height="68dp"
           app:cornerRadius="360dp"
           android:textSize="34dp"
           android:backgroundTint="#F44336"
           android:textColor="@color/white"
           style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
           android:text="C"
           android:id="@+id/button_c"
           android:layout_margin="12dp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="68dp"
           android:layout_height="68dp"
           app:cornerRadius="360dp"
           android:backgroundTint="#AC9C9C"
           android:textColor="@color/white"
           android:textSize="34dp"
           style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
           android:text="("
           android:id="@+id/button_open_bracket"
           android:layout_margin="12dp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="68dp"
           android:layout_height="68dp"
           app:cornerRadius="360dp"
           android:backgroundTint="#AC9C9C"
           android:textColor="@color/white"
           android:textSize="34dp"
           style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
           android:text=")"
           android:id="@+id/button_close_bracket"
           android:layout_margin="12dp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="68dp"
           android:layout_height="68dp"
           app:cornerRadius="360dp"
           android:textColor="@color/white"
           style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
           android:text="/"
           android:textSize="34dp"
           android:id="@+id/button_divide"
           android:backgroundTint="#FF9800"
           android:layout_margin="12dp"/>
   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textSize="34dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:id="@+id/button_7"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:id="@+id/button_8"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:id="@+id/button_9"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:textSize="34dp"
                android:id="@+id/button_multiply"
                android:backgroundTint="#FF9800"
                android:layout_margin="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textSize="34dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:id="@+id/button_4"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:id="@+id/button_5"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:id="@+id/button_6"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:textSize="34dp"
                android:id="@+id/button_addition"
                android:backgroundTint="#FF9800"
                android:layout_margin="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textSize="34dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:id="@+id/button_1"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:id="@+id/button_2"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:id="@+id/button_3"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:textSize="34dp"
                android:id="@+id/button_substract"
                android:backgroundTint="#FF9800"
                android:layout_margin="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textSize="17dp"
                android:backgroundTint="#F44336"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:id="@+id/button_AC"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:id="@+id/button_0"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360dp"
                android:textColor="@color/white"
                android:textSize="34dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:id="@+id/button_dot"
                android:layout_margin="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="360sp"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:textSize="34sp"
                android:id="@+id/button_equal"
                android:backgroundTint="#FF9800"
                android:layout_margin="12sp"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>